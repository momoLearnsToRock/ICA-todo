    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceFolder}\\TodoService\\js\\app.js",
        "outFiles": [
          "${workspaceFolder}/**/*.js"
        ]
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Mocha Tests",
        "program": "${workspaceRoot}//TodoService//node_modules/mocha/bin/_mocha",
        "args": [
          // "--timeout",
          // "1000000",
          "-r",
          "ts-node/register",
          "${workspaceRoot}\\test\\*.spec.ts"
        ],
        "internalConsoleOptions": "openOnSessionStart"
      },
    ]
  }
  